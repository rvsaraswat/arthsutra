# Application
APP_NAME=Arthsutra - AI Personal Finance Manager
APP_VERSION=1.0.0
DEBUG=True

# Database
DATABASE_PATH=./data/finance.db
DATABASE_ENCRYPTION_KEY=change_this_to_a_secure_key_in_production_12345

# API
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# AI / LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
EMBEDDING_MODEL=nomic-embed-text

# ML Models
CATEGORIZATION_MODEL_PATH=./backend/models/categorization.pkl
FORECASTING_MODEL_PATH=./backend/models/forecasting.pkl

# Security
SECRET_KEY=change_this_to_a_secure_random_string_in_production
ENCRYPTION_ALGORITHM=AES-256-GCM
ENCRYPTION_KEY_SIZE=32

# Data Ingestion
ALLOWED_FILE_TYPES=[".csv",".pdf",".json"]
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log